/**
 * This test shows contravariant types
 */
type CRef[-T : Type] <: observablePointer {
  new;
}

type T {
  test "use" {
    val c = new CRef[int]
    true
  }

  test "assign" {
    val c = new CRef[int]
    var d : CRef[0.type]
    d = c
    c == d
  }

  test "wrong" <: noCompile[NAM_NOT_FOUND_OVERLOAD_SINGLE] {
    val c = new CRef[0.type]
    var d : CRef[int]
    d = c
    c == d
  }
}