/**
 * This test should show a Tyr equivalent of C's static local variables.
 *
 * @todo rework this test to fit into the actual semantics; it should take into
 *    account that using one's own members is always allowed
 */
type T {

  private[f] type var x = 0

  type def f = ++x

  // not allowed:
  type def g = ++x

  test "use" {
    0 == f() && 1 == f()
  }

  test "no compile" {
    false
  }
}
