/**
 * test global functions
 */
type T {

  type def f : void {
    7 + 3
    return
  }

  type def g : bool = false

  type def h : void {
  }

  test "basic" {
    f()
    h()
    !g()
  }
  
  test "while" {
    while(g) f();
    true
  }
  
  test "while short" {
    while g f
  }

  test "while call" {
    while(g()) f();
    true
  }
  
  test "do while" {
    do {
      f()
    } while(g);
    true
  }
  
  test "do while call" {
    do {
      f()
    } while(g());
    true
  }
}
