/**
 * Check class fields
 */
class S {
  class def name : String = "S"
}

class T <: S {
  // overrides S
  class def name : String = "T"

  test "direct access" {
    "T" == T.name() && "S" == S.name()
  }

  test "virtual access" {
    val x = new T
    val s : S = x;
    val r = "T" == x.name() && "T" = s.name()
    delete x
    r
  }

  test "sta/dta access" {
    val x = new T
    val s : S = x;
    val r = "T" == s.name() && "S" = s.type.name()
    delete x
    r
  }
}
